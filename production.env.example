# Production Environment Configuration
# Copy this file to .env and update the values for your production environment

# Database Configuration (MariaDB/MySQL)
DATABASE_URL=mysql+pymysql://foody:your_secure_database_password_here@localhost:3306/foody

# Application Configuration
SECRET_KEY=your_very_long_and_secure_secret_key_here
FLASK_ENV=production
SERVER_NAME=lab10.ifalabs.org

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password_or_app_password
ADMINS=admin@lab10.ifalabs.org

# Logging Configuration
LOG_TO_STDOUT=true

